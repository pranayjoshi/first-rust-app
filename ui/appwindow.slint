import { Button, VerticalBox, LineEdit, HorizontalBox} from "std-widgets.slint";

component CalculateButton inherits Button {
    text: "Calculate";
    // on-clicked: request-increase-value();
    primary: true;
    
}

export component AppWindow inherits Window {
    in property <string> result: "";
    callback divide-income(int, string);
    background: white;
    title: "Income Tax Calculator";
    VerticalBox {
        padding: 50px;
        spacing: 25px;
        HorizontalLayout {
            Text {
                text: "Enter Total Income";
                horizontal-alignment: center;
                font-size: 24px;
                font-weight: 900;
            }
        }

        HorizontalLayout {
            income := LineEdit {
                horizontal-alignment: center;
                font-size: 16px;
                placeholder-text: "Enter your number";
            }
        }
        HorizontalLayout{
            CalculateButton {
                on-clicked: divide-income(income.text);
            }
        }
        HorizontalLayout {
            VerticalBox {
                Rectangle {
                    height: 100px;
                    background: #f2f2f2;
                    Text {
                        text: root.result;
                        horizontal-alignment: center;
                        font-size: 16px;
                        font-weight: 500;
                    }
                }
            }
        }
    }
}
